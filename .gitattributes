# Set default behavior for all files
* text=auto

# Force LF line endings for text files on all platforms
*.py text eol=lf
*.md text eol=lf
*.json text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.sql text eol=lf

# Force CRLF line endings for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary